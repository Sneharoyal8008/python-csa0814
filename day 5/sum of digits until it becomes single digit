def sum_of_digits_until_single(n):
    while n >= 10:
        # Convert number to string to iterate over digits
        n = sum(int(digit) for digit in str(n))
    return n

# Example usage
number = 9875
result = sum_of_digits_until_single(number)
print(f"The single digit result of summing the digits of {number} is {result}.")
